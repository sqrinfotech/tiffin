
block content
  .container
    center
        h3 Change Your Password
      form.well.form-horizontal(action='/users/login', method='post')
        .form-group
          label.col-sm-3.control-label(for='username') username :
          .col-sm-7
            input#npassword.form-control(type='text',name='username')

        .form-group
          label.col-sm-3.control-label(for='password') Password :
          .col-sm-7
            input#cpassword.form-control(type='password',name='password')

        .form-group
          button.btn.btn-primary.col-sm-2(type='submit') Submit