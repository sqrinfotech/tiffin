extends ../layout

block content
  .container
    center
        h3 Forgot your password?
      form.well.form-horizontal(action='/dabbawalas/resetpassword', method='Post')
        .form-group
          label.col-sm-3.control-label(for='email') Login :
          .col-sm-7
            input#email.form-control(type='text',name='email')

        .form-group
          .col-sm-5
          button.btn.btn-primary.col-sm-4(type='submit') Send me reset password instruction