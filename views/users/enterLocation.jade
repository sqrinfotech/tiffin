extends ../layout

block content
  a.btn.btn-success.btn-lg(href="/users/#{records._id}/logout") Logout
  .middle
    .container
      .jumbotron
        form.well.form-horizontal(action='/users/sendLocation', method='Get')
          .form-group
            label.col-sm-3.control-label(for='location') Enter Area :
            .col-sm-7
              input#location.form-control(type='text',name='location')

          .form-group
            .col-sm-5
            button.btn.btn-primary.col-sm-2(type='submit') Search